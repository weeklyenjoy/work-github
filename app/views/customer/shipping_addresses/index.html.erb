<div class="container px-5 px-sm-0">
  <div class="row">
    <h2>配送先登録/一覧</h2>
  </div>
  <div class="row">
    <%= form_with model: @shipping_address, url: customer_shipping_addresses_path, local:true do |f| %>
      <dev class="form-group">
         <label>郵便番号（ハイフンなし）</lable>
         <%= f.text_field :postal_code, class:"form-control" %>
      </dev>
      <div class="form-group">
        <label>住所</label>
        <%= f.text_field :address, class:"form-control" %>
      </div>
      <div class="form-group">
        <label>宛名</label>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <%= f.submit "新規登録", class: "btn btn-lg btn-success pull-right" %>
      <% end %>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td>
              <%= shipping_address.postal_code %>
            </td>
            <td>
              <%= shipping_address.address %>
            </td>
            <td>
              <%= shipping_address.name %>
            </td>
            <td>
              <%= link_to "編集する",edit_customer_shipping_address_path(shipping_address.id), class: "btn btn-sm btn-success pull-left" %>
              <%= link_to "削除する","/customer/shipping_addresses/#{shipping_address.id}","data-confirm" => "本当に消しますか?", class: 'btn btn-sm btn-danger pull-right' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
