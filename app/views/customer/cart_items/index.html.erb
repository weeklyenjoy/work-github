<div class="container">
  <div class="row">
    <div class="col-xs-10 col-offset-xs-1">
         <div class="pull-left">
           <h2>ショッピングカート</h2>
         </div>
         <div class="pull-right">
           <p><%= link_to "カートを空にする", customer_cart_item_destroy_all_path, method: :delete,class: 'btn btn-sm btn-danger' %></p>
         </div>
         <table class="table table-hover table-bordered">
           <thead>
             <tr class="info">
               <th>商品名</th>
               <th>単価(税込)</th>
               <th>数量</th>
               <th>小計</th>
               <th></th>
             </tr>
           </thead>
           <tbody>
             <% total_fee = 0 #全商品の合計金額%>
             <% @cart_items.each do |cart_item| %>
               <tr>
                 <td>
                   <%= attachment_image_tag( cart_item.item, :image, size: "55x43", fallback: "no_image.jpg") %>
                   <%= cart_item.item.name %>
                 </td>
                 <td>
                   <% tax_in_price = cart_item.item.tax_out_price.to_i*1.1 %>
                   ¥<%= tax_in_price.floor %>
                 </td>
                 <td>
                   <%= form_with model: cart_item, url: customer_cart_item_path(cart_item), method: :patch , local: true do |f| %>
                     <%= f.number_field :volume %>
                     <%= f.submit "変更", class: "btn btn-info" %>
                   <% end %>
                 </td>
                 <td>
                   <% sum = tax_in_price.floor * cart_item.volume %>
                   ¥<%= sum.to_s(:delimited) %>
                 </td>
                 <td>
                   <%= link_to " 削除する", customer_cart_item_path(cart_item), method: :delete,  class: "btn btn-danger" %>
                 </td>
               </tr>
               <% total_fee += sum %>
             <% end %>
           </tbody>
         </table>
         <div class="pull-left">
           <tr>
             <%= link_to " 買い物を続ける", customer_items_path, class: "btn btn-info" %>
         </div>
         <div class="pull-right">
           <table class="table table-bordered">
            <td class="sum">合計金額</td>
            <td class="sum">¥<%= total_fee.to_s(:delimited) %></td>
          </tr>
        </table>
         </div>
         <div class="text-center">
           <%= link_to " 情報入力に進む", new_customer_order_path,  class: " btn btn-success center-block" %>
         </div>
       </div>
   </div>
</div>
