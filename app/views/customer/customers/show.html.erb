<main>
  <div class="container">
    <div class="row">
      <div class="mt-5">
          <h3 class="ml-5">マイページ</h3>
          <h5 class="mt-5">登録情報 <%= link_to "編集する", edit_customer_customer_path(current_customer.id), class: "btn btn-success ml-5 px-5" %></h5>
          <table class="table table-striped">
             <tr><td>氏名</td><td><%= current_customer.last_name %> <%= current_customer.first_name %></td></tr>
             <tr><td>カナ</td><td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td></tr>
             <tr><td>郵便番号</td><td><%= current_customer.postal_code %></td></tr>
             <tr><td>住所</td><td><%= current_customer.address %></td></tr>
             <tr><td>電話番号</td><td><%= current_customer.telephone_number %></td></tr>
             <tr><td>メールアドレス</td><td><%= current_customer.email %></td></tr>
          </table>
          <h5 class="mt-5">配送先 <%= link_to "一覧を見る",customer_shipping_addresses_path,class: " btn btn-primary ml-5 px-5 " %> </h5>
          <h5 class="mt-5">注文履歴 <%= link_to "一覧を見る", customer_orders_path, class: " btn btn-primary ml-4 px-5 " %></h5>
      </div>
    </div>
  </div>
</main>