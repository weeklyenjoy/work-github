<main>
  <div class="container">
    <div class="row">
      <div class="col-7 mt-5 pt-3">
        <h5 class="mb-4">注文情報確認</h5>
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">商品名</th>
              <th scope="col">単価（税込）</th>
              <th scope="col">数量</th>
              <th scope="col">小計</th>
            </tr>
          </thead>
           <% total_price = 0 %>
           <% @cart_items.each do |cart_item| %>
           <% tax_in_price = cart_item.item.tax_out_price * 1.1 %>
          <tbody>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= tax_in_price.floor %></td>
              <td><%= cart_item.volume %></td>
              <td><%= tax_in_price.floor * cart_item.volume %></td>
            </tr>
            <% sum = tax_in_price.floor * cart_item.volume %>
            <% total_price += sum %>
          </tbody>
          <% end %>
        </table>
        <h5 class="mt-5">支払い方法</h5>
        <p class="mt-4 ml-5">
          <%= @order.payment_method %>
        </p>
        <h5 class="mt-5">お届け先</h5>
        <p class="mt-4 ml-5">
          <%= @order.postal_code %> <%= @order.address %>
        </p>
      </div>
      <div class="col-4 mt-5 pt-5">
        <table class="table">

          <tr>
            <th>送料</th><td>800</td>
          </tr>

          <tr>
            <th>商品合計</th><td><%= total_price %></td>
          </tr>

          <tr>
            <th>請求金額</th><td><%= total_price + 800 %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <div class="text-center mt-5">
    <%= form_with model: @order, url: customer_orders_path, method: :post ,local:true do |f| %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :address , :value =>  @order.address %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :billing_amount, :value => total_price + 800 %>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    <%= f.hidden_field :status, :value => @order.status %>
    <%= f.hidden_field :address_option , :value => @order.address_option %>
    <%= f.submit '注文を確定する', class: "btn btn-success" %>
    <% end %>
  </div>
</main>