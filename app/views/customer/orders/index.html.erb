<main>
  <div class="container">
    <div class="row">
      <div class="mt-5 p-5">
        <h5 class="mb-4">注文履歴一覧</h5>
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">注文日</th>
              <th scope="col">配送先</th>
              <th scope="col">注文商品</th>
              <th scope="col">支払金額</th>
              <th scope="col">ステータス</th>
              <th scope="col">注文詳細</th>
            </tr>
          </thead>
          <% @oders.each do |cart_item| %>
            <tbody>
              <tr>
                <td><%= oder.create_at %></td>
                <td>
                  〒<%= oder.postal_code %><br>
                  <%= oder.address %><br>
                  <%= oder.name %>
                </td>
                <td>
                  <% oder.oder_item.each do |oder_item| %>
                    <%= oder_item.name %><br>
                  <% end %>
                </td>
                <td><%= oder.total_fee.to_s(:delimited) %></td>
                <td><%= oder.oder_status %></td>
                <td><%= link_to "表示する", customer_oder_path(oder.id) %> </td>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
</main>