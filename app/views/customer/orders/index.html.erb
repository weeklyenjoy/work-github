<main>
  <div class="container">
    <div class="row">
      <div class="mt-5 p-5">
        <h5 class="mb-4">注文履歴一覧</h5>
        <table class="table">
          <thead class="thead-light">
            <tr>
              <th scope="col">注文日</th>
              <th scope="col">配送先</th>
              <th scope="col">注文商品</th>
              <th scope="col">支払金額</th>
              <th scope="col">ステータス</th>
              <th scope="col">注文詳細</th>
            </tr>
          </thead>
          <% @orders.each do |order| %>
            <tbody>
              <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                  〒<%= order.postal_code %><br>
                  <%= order.address %><br>
                  <%= order.name %>
                </td>
                <td>
                  <% total = 0 %>
                  <% order.ordered_items.each do |ordered_item| %>
                    <%= ordered_item.item.name %><br>
                    <% total += (ordered_item.item.tax_out_price * ordered_item.volume * 1.1).floor %>
                  <% end %>
                </td>
                <td><%= total.to_s(:delimited) %>円</td>
                <td><%= order.status %></td>
                <td><%= link_to "表示する", customer_order_path(order.id) %> </td>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
</main>