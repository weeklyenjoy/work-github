<div class="container">
  <div class="row">
    <div class="col-xs-1">
    </div>
    <div class="col-xs-12">

    <h3 class="order-title-show">
      <strong>注文詳細画面</strong>
    </h3>
<!-- 注文詳細 -->
        <table class="table table-striped">
           <tr>
              <th>購入者</th>
              <td>
               <%= link_to (@order.customer.full_name), admins_customer_path(@order.customer.id) %>
              </td>
          　</tr>
          　<tr>
              <th>配送先</th>
              <td>
                    <p>
                    〒<%= @order.postal_code %><%= @order.adress %><br>
                    <%= @order.name %>
                    </p>
              </td>
          　</tr>
          　<tr>
              <th>支払い方法</th>
              <td><%= @order.payment_method_i18n %></td>
            </tr>
            <tr>
              <th>注文ステータス</th>
              <td>
                <%= form_with model: @order, url: admin_order_path(@order), method: :patch , local: true do |f| %>
                  <%= f.label :status, class: "ml-4" %>
                  <%= f.submit "変更", class: "btn btn-info" %>
                <% end %>
              </td>
            </tr>

        <table class="table table-hover table-bordered">
           <thead>
             <tr class="info">
               <th>商品名</th>
               <th>単価(税込)</th>
               <th>数量</th>
               <th>小計</th>
               <th>製作ステータス</th>
             </tr>
           </thead>
           <tbody>
             <% total_fee = 0 #全商品の合計金額%>
             <% @order.ordered_item.each do | ordered_item | %>
               <tr>
                 <td>
                   <%= ordered_item.name %>
                 </td>
                 <td>
                   ¥<%= ordered_item.tax_in_price %>
                 </td>
                 <td>
                    <%= ordered_item.volume %>
                 </td>
                 <td>
                   <% sum = ordered_item.tax_in_price.floor * ordered_item.volume %>
                   ¥<%= sum.to_s(:delimited) %>
                 </td>
                 <td>
                  <%= form_with model: @ordered_item, url: admin_ordered_item_path(@order), method: :patch , local: true do |f| %>
                    <%= f.label :making_status, class: "ml-4" %>
                    <%= f.submit "変更", class: "btn btn-info" %>
                  <% end %>
                 </td>
               </tr>
               <% total_fee += sum %>
             <% end %>
           </tbody>
        </table>