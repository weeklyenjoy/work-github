<div class="container">
  <div class="admin-customer pt-5">
    <h3>商品一覧</h3>
    <div class="text-right index-new">
      <%= link_to new_admin_item_path do %>
        <button type="button" class="btn btn-success btn-success btn-circle btn-lg">＋</button>
      <% end %>
    </div>
    <table class="table">
      <thead>
        <tr class="table-active">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name,admin_item_path(item) %></td>
          <td><%= item.tax_out_price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active == true ? "販売" : "販売中止" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= paginate @items %>