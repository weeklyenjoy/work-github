<div class="container">
  <div class="admin-customer pt-5">
    <div class="text-danger">
      <% if @item.errors.any? %>
         <span class="h4"><%= @item.errors.count %>errors prohibited this obj from being saved:</span>
        <% @item.errors.full_messages.each do |message| %><br>
           ・<%= message %>
        <% end %>
      <% end %>
    </div>
    <div classs="row">
      <h4 class="pb-3">商品登録</h4>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <%= form_with model: @item, url: admin_item_path, local: true do |f| %>
          <div class="form-group">
          <div class="form-inline">
          <label>商品画像</label>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.attachment_field :image, :size=>"60" %>
          </div>
          </div>

          <div class="form-group">
          <div class="form-inline">
          <label>商品名</label>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :name, :size=>"57" %>
          </div>
          </div>

          <div class="form-group">
          <div class="form-inline">
          <label>商品説明</label>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_area :caption, :size=>"60" %>
          </div>
          </div>

          <div class="form-group">
          <div class="form-inline">
          <label>ジャンル</label>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.collection_select :genre_id, Genre.all, :id, :name, { prompt: "選択してください" } %>
          </div>
          </div>

          <div class="form-group">
          <div class="form-inline">
          <label>税抜き価格</label>
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.number_field :tax_out_price, :size=>"120" %>
          </div>
          </div>

          <div class="form-group">
            <label>販売ステータス</label>
            <span class="admin-is_deleted-radio_button mr-3">
            &nbsp;<%= f.radio_button :is_active, true %>
            <%= f.label :is_active, '販売中', value: true %>
            </span>
            <span class="admin-is_deleted-radio_button">
            &nbsp;<%= f.radio_button :is_active, false %>
            <%= f.label :is_active, '販売中止', value: false %>
            </span>
          </div>

          <div>
            <%= f.submit " 変更を保存する" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

