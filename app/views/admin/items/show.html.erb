<div class="container">
  <h2 class="mt-5">商品詳細</h2>
  <div class="row">
    <div class="mt-5 col-md-5">
        <span><%= attachment_image_tag @item, :image, format: 'jpeg', fallback: 'no_image.jpg', size:'300x300'%></sapn>
    </div>


  <div class="mt-5 col-md-5">
        <div class="row">
          <p class="col-md-4 admin-item-title">商品名:</p>
          <p class="col-md-8"><%= @item.name %></p>
        </div>

        <div class="row">
          <p class="col-md-4">商品説明:</p>
          <p class="col-md-8"><%= @item.caption %></p>
        </div>
    
        <div class="row">
          <p class="col-md-4">ジャンル:</p>
          <p class="col-md-8"><%= @item.genre.name %></p>
        </div>
        

        <div class="row">
          <p class="col-md-4">税込価格<br>(税抜価格)</p>
            <p class="col-md-8 admin-item-price">
              <%= (@item.tax_out_price * 1.1).floor %>円<br>
              (<%= @item.tax_out_price %>)円
            </p>
        </div>

        <div class="row">
          <p class="col-md-4">販売ステータス</p>
            <p class="col-md-8">
              <%= @item.is_active == true ? "販売" : "販売中止" %>
            </p>
            
            
        </div>
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success btn-lg pull-right" %>
    </div>
  </div>
</div>

