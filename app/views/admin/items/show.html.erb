<div class="container">
  <div class="row">
    <h4 class="pb-3">商品詳細</h4>
  </div>
  <div class="row">
    <div class="col-lg-4">
      <div><%= attachment_image_tag @item, :image %></div>
    </div>
    <div class="col-lg-8">
      <div>商品名</div>
      <div><%= @item.name %></div>
      <div>商品説明</div>
      <div><%= @item.caption %></div>
      <div>ジャンル</div>
      <div><%= @item.genre.name %></div>
      <div>税込み価格</div>
      <div><%= (@item.tax_out_price * 1.1).floor %><span>(<%= @item.tax_out_price %>)円</span></div>
      <div>販売ステータス</div>
      <div><%= @item.is_active == true ? "販売" : "販売中止" %></div>
      <div><%= link_to "編集する",edit_admin_item_path %></div>
    </div>
  </div>
</div>

